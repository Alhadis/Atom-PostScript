".source.postscript":
	core:
		fileEncoding: "iso88591"
	editor:
		nonWordCharacters: "\\()\"':,;<>~!@#$%^&*|+=[]{}`?-…"
		increaseIndentPattern: "(?:[{\\[]|<[~<]?)\\s*$"
		decreaseIndentPattern: "^\\s*(?:[}\\]]|[~>]?>)"
		commentStart: "% "
	"bracket-matcher":
		autocompleteCharacters: [
			"()"
			"[]"
			"{}"
			'""'
			"''"
			"``"
			"“”"
			"‘’"
			"«»"
			"‹›"
			"<>"
		]
		pairsWithExtraNewline: [
			"()"
			"[]"
			"{}"
			"<>"
		]

".source.postscript .comment,
 .source.postscript .string":
	editor:
		nonWordCharacters: "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-…"
